<div class="card">
  <h2>Student Registration</h2>
  <% if (success) { %>
    <div class="success"><%= success %></div>
  <% } %>
  <% if (errors && errors.length) { %>
    <div class="error"><%= errors[0].msg %></div>
  <% } %>
  <form method="POST" action="/students/register">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="grid">
      <div>
        <label>Name</label>
        <input class="input" type="text" name="name" required>
      </div>
      <div>
        <label>Registration Number</label>
        <input class="input" type="text" name="reg_no" required>
      </div>
      <div>
        <label>Department</label>
        <input class="input" type="text" name="department" required>
      </div>
      <div>
        <label>Section</label>
        <input class="input" type="text" name="section" required>
      </div>
      <div>
        <label>Year of Study</label>
        <input class="input" type="number" min="1" max="8" name="year" required>
      </div>
    </div>
    <button class="button" type="submit">Register</button>
  </form>
</div>
